<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>宇宙蛏子号航行记录</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">

        <div id="blog-columns">
            <div id="left-column-blog">
                <div class="calendar">
                    <div class="calendar-header">
                        <select id="year-select"></select>
                        <select id="month-select"></select>
                    </div>
                    <div class="calendar-dates" id="calendar-dates">
                        <!-- Calendar dates will be generated here -->
                    </div>
                </div>
            </div>
            <div id="right-column-blog">
                <div class="log-container">
                    <h1 id="log-list-title">宇宙蛏子号航行记录</h1>
                    {% for post in collections.posts | reverse %}
                    <div class="log-entry">
                        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                        <p class="log-preview">{{ post.data.preview }}</p>
                        <p class="post-meta">发布日期: {{ post.data.date | date('yyyy-MM-dd') }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="back-to-home">
            <a href="/">[ 返回主页 ]</a>
        </div>
    </div>
        <script type="application/json" id="post-dates">
        [{% for post in collections.posts %}"{{ post.data.date | date('yyyy-MM-dd') }}"{% if not loop.last %},{% endif %}{% endfor %}]
    </script>
    <script src="/assets/js/calendar.js"></script>
</body>
</html>